<Window x:Class="ITMO.WPF.Practice11.InkPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.WPF.Practice11.InkPad"
        mc:Ignorable="d"
        Title="Ink Pad" Height="600" Width="370" Background="LightGray">
    <Grid>

        <InkCanvas x:Name="inkCanvas1" Background="LightYellow" Margin="0,0,0,50"/>
        <Button x:Name="Button1" Content="Clear" HorizontalAlignment="Left" Margin="42,0,0,15" VerticalAlignment="Bottom" Width="70" Height="20" Click="Button1_Click"/>
        <Button x:Name="Button2" Content="Close" HorizontalAlignment="Left" Margin="249,0,0,15" VerticalAlignment="Bottom" Width="70" Height="20" Click="Button2_Click"/>



    </Grid>
</Window>
