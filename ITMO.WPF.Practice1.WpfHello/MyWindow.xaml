        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.WPF.Practice1.WpfHello"
        mc:Ignorable="d"
        Title="MyWindow" Height="450" Width="800" Background="{StaticResource gradientStyle}" Closing="Window_Closing" Closed="Window_Closed" >
   
    <Grid>
        <Button x:Name="xButton" Content="Button" HorizontalAlignment="Left" Height="70" Width="70" Margin="325,178,0,0" VerticalAlignment="Top" 
                Template="{DynamicResource customButtonTemplate}" Click="xButton_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="471,172,0,0" 
                 Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="80" Width="120"/>

    </Grid>
</Window>
