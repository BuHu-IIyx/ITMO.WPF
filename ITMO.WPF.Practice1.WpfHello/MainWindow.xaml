                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" VerticalAlignment="Top">Пуск</Label>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="69,88,0,0" VerticalAlignment="Top" Height="23" Width="70" Click="setBut_Click"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="69,152,0,0" VerticalAlignment="Top" Height="23" Width="70" Click="retBut_Click"/>
        <Button x:Name="NewWin" Content="New Win" HorizontalAlignment="Left" Margin="69,224,0,0" VerticalAlignment="Top" Height="23" Width="70" Click="NewWin_Click"/>
        <TextBlock x:Name="txtBlock" TextWrapping="Wrap" VerticalAlignment="Top" HorizontalAlignment="Left" Height="50" Width="75" Margin="323,210,0,0"/>
        <TextBox x:Name="setText" HorizontalAlignment="Left" Margin="318,89,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="setText_TextChanged"/>
        <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="318,149,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
