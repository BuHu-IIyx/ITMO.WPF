<Window x:Class="ITMO.WPF.Practice1.WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ITMO.WPF.Practice1.WpfHello"
        mc:Ignorable="d"
        Title="Приложение WPF" Height="350" Width="500" MinHeight="350" MinWidth="300" Closing="Window_Closing" Top="25" Left="25">

    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
